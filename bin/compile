#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir> <env-dir>

START_TIME=$SECONDS

# set -x            # debug every command
set -o errexit      # always exit on error
set -o pipefail     # don't ignore exit codes when piping output
unset GIT_DIR       # Avoid GIT_DIR leak from previous build steps

### Configure directories
CLI_PATH="/tmp/cli"
BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

### Load additional functions
source $BP_DIR/lib/common.sh

source <(curl -s --retry 3 https://lang-common.s3.amazonaws.com/buildpack-stdlib/v7/stdlib.sh)

### Setup functions
setup_dirs() {
  local DIR="$1"
  export PATH="$DIR/.local/share/sfdx/cli/bin:$DIR/.sfdx/bin:$PATH"
}

### Execute
header 'Welcome to salesforce-dx-buildpack!'
update "Exporting environment directories ..."
export_env "$ENV_DIR"

update "Setting up paths ..."

update "-- BUILD_DIR" $BUILD_DIR
update "-- CACHE_DIR" $CACHE_DIR
update "-- ENV_DIR" $ENV_DIR

setup_dirs "$BUILD_DIR"

update "Updating CLI ..."
sfdx update &>/dev/null
update "-- Completed 'sfdx update'"
SFDX_VERSION=$(sfdx version)
update "-- sfdx version: " $SFDX_VERSION
SFDX_PLUGINS=$(sfdx plugins --core)
update "-- Plugins: " $SFDX_PLUGINS

update "Config vars ..."
update "-- CLIENT_ID: $CLIENT_ID"
update "-- USERNAME: $USERNAME"
update "-- CERT_KEY: $CERT_KEY"
update "-- SCRATCH_CONFIG_FILE: $SCRATCH_CONFIG_FILE"

# Create cert.key
CERT_KEY_PATH="certs"
mkdir $CERT_KEY_PATH
CERT_KEY_FILE="$CERT_KEY_PATH/cert.key"
update "-- CERT_KEY_FILE: $CERT_KEY_FILE"
echo "$CERT_KEY" > "$CERT_KEY_FILE"

# Go to BUILD_DIR
cd $BUILD_DIR

# Authenticate to Dev Hub
sfdx force:auth:jwt:grant --clientid $CLIENT_ID --username $USERNAME --jwtkeyfile $CERT_KEY_FILE --setdefaultdevhubusername

# Create scratch org
sfdx force:org:create -s -f $SCRATCH_CONFIG_FILE

header "DONE! Completed in $(($SECONDS - $START_TIME))s"
exit 0